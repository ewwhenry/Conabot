{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "nodenext",
    "target": "es2022",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
